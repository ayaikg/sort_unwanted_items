<% content_for(:title, t('.title')) %>
<main class="md:my-auto lg:flex-grow">
  <div>
    <div class="p-5">
      <h2 class="mb-5 text-center font-bold md:text-xl">1週間のデータ</h2>
      <div class="flex justify-center">
        <div class="stats shadow md:w-1/2">
          <div class="stat place-items-center">
            <div class="stat-title">現在のアイテム数</div>
            <div class="stat-value"><%= @before_items %><span class="text-sm">個</span></div>
          </div>
          <div class="stat place-items-center">
            <div class="stat-title">先月の断捨離数</div>
            <div class="stat-value"><%= current_user.last_month_disposed_items %><span class="text-sm">個</span></div>
          </div>
        </div>
      </div>
      <div class="flex justify-center items-end mb-3">
        <div class="dropdown relative">
          <label tabindex="0" class="btn btn-circle btn-ghost btn-xs text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </label>
          <div tabindex="0" class="card compact dropdown-content z-[1] shadow bg-base-100 rounded-box absolute top-[30px] -left-[50px] md:-left-[10px] w-72 md:w-80">
            <div class="card-body text-center">
              <h2 class="border-b font-bold">アドバイスとは?</h2>
              <ul>
                <li>登録したアイテムの中から、次に捨てるアイテムをおすすめします。</li>
                <li>みんなが捨てたアイテムと似ているものをご提案します。</li>
              </ul>
            </div>
          </div>
        </div>
        <%= link_to "アドバイスをみる", recommend_path, data: { turbo_frame: "modal" }, class: "btn btn-sm btn-secondary md:btn-wide" %>
      </div>
      <div data-controller="chart" class="relative h-[400px] md:h-[450px] bg-base-100">
        <canvas data-chart-target="canvas"></canvas>
      </div>
    </div>

    <div class="p-3 md:p-5">
      <h2 class="text-center font-bold md:text-xl mb-5">今月の達成度</h2>
      <%= render @decluttering %>
      <div class="flex justify-center items-center mt-3">
        <%= link_to "目標を設定する", edit_decluttering_path(current_user), data: { turbo_frame: "modal" }, class: "btn btn-secondary rounded-full md:btn-wide" %>
      </div>
    </div>
  </div>
</main>