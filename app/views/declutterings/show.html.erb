<div class="container w-full">
  <div class="card w-auto bg-base-100 shadow-xl m-5 md:max-w-md mx-auto">
    <div class="card-body items-center text-center">
      <h2 class="card-title">目標設定</h2>
      <div class="radial-progress" style="--value:70; --size:8rem" role="progressbar">70%</div>

      <%= turbo_frame_tag "decluttering_amount" do %>
        <div class="stats">
          <div class="stat place-items-center">
            <div class="stat-title">現在</div>
            <div class="stat-value"><%= @goal_amount %><span class="text-sm">個</span></div>
          </div>
          <div class="stat place-items-center">
            <div class="stat-title">今月の目標</div>
            <div class="stat-value"><%= @total_disposed_items %><span class="text-sm">個</span></div>
          </div>
        </div>

        <div class="stats shadow w-full">
          <div class="stat">
            <div class="stat-title">目標との差</div>
            <div class="stat-value"><span class="text-sm">あと</span><%= @difference %><span class="text-sm">個</span></div>
          </div>
        </div>
      <% end %>

      <div class="w-full flex">
        <div class="stats mx-auto">
          <div class="stat place-items-center bg-base-200 rounded-lg">
            <div class="stat-title">先月</div>
            <div class="stat-value">31<span class="text-sm">個</span></div>
          </div>
        </div>
        <div class="stats mx-auto">
          <div class="stat place-items-center bg-base-200 rounded-lg">
            <div class="stat-title">先月比</div>
            <div class="stat-value">-1.3<span class="text-sm">%</span></div>
            <div class="stat-desc">↘︎ 90 (14%)</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-center">
    <%= link_to "目標を設定する", new_decluttering_path, data: { turbo_frame: "modal" }, class: "btn btn-primary" %>
  </div>
</div>