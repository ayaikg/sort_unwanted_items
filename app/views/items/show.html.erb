<% content_for(:title, t('.title')) %>
<main class="m-auto lg:mx-0">
  <p class="font-bold my-5 lg:ml-10">アイテム画像</p>
  <div class="lg:flex lg:justify-center lg:items-center">
    <div class="flex justify-center items-center lg:w-2/5">
      <%= image_tag @item.image.url, class: "w-[180px] md:w-[200px] lg:w-[400px]" %>
    </div>
    <div class="overflow-x-auto lg:p-5 lg:mx-10 lg:bg-base-100 lg:rounded-md lg:w-3/5 lg:border-2">
      <p class="font-bold text-xl my-5"><%= @item.name %></p>
      <p class="font-bold text-lg border-b p-2 text-slate-600">アイテムの詳細</p>
      <table class="table">
        <%= render 'item_show', item: @item %>
      </table>
      <ul class="flex items-center justify-end space-x-2 p-2">
        <li>
          <%= link_to edit_item_path(@item), class: "btn btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
            <span>編集</span>
          <% end %>
        </li>
        <% if @item.disposal_method_i18n == "処分前" %>
          <li>
            <%= button_to @item, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn btn-error" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
              <span>削除</span>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to '投稿する', new_post_path(item_id: @item.id), class: "btn btn-primary" %>
          </li>
          <li>
            <%= link_to "https://twitter.com/share?url=#{ request.url }&text=【断捨離アイテム】%0a%0a#{ @item.name }%0a%0a【断捨離日】%0a%0a#{ @item.disposed_at }", target: '_blank', class: "btn rounded-full btn-primary" do %>
              <%= image_tag "logo-black.png", class: "w-3" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</main>