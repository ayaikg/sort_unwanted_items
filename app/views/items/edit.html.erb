<main class="my-auto md:m-auto">
  <div class="p-5 md:w-[700px]">
    <%= form_with model: @item, local: true, class: "space-y-6 lg:space-y-8" do |f| %>
      <%= render "form", { f: f, item: @item, category: @categories, parent_category: @parent_category } do %>
        <div class="form-control" id="children_wrapper2">
          <%= f.collection_select :category_id, @child_categories, :id, :title, { include_blank: "カテゴリーを選択(必須)" }, { class: "select select-bordered", id: "child_category" } %>
        </div>
      <% end %>
    <% end %>
  </div>
</main>