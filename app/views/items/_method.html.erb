<div class="mb-6 flex justify-center">
  <%= turbo_frame_tag item do %>
    <%= form_with model: item, data: { action: "turbo:submit-end->modal#close" }, local: true do |f| %>
      <%= f.radio_button :disposal_method, true %>
      <%= f.label :disposal_method, "売れた", value: true %>
      <%= f.radio_button :disposal_method, false %>
      <%= f.label :disposal_method, "捨てた", value: false %>
    <% end %>
  <% end %>
</div>