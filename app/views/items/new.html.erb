<% content_for(:title, t('.title')) %>
<main class="my-auto md:m-auto">
  <div class="p-5 md:w-[700px] lg:w-[1000px]">
  <%= form_with model: @item, local: true do |f| %>
    <%= render "form", { f: f, item: @item } do %>
      <div class="mb-4 lg:mb-4 lg:flex lg:items-center">
        <%= f.label :category_id, class: "mb-2 lg:mb-0 lg:mr-5" do %>
          カテゴリー<span class="text-xs text-error">*必須</span>
        <% end %>
        <div class="form-control lg:w-3/4">
          <%= f.collection_select :category_id, @categories, :id, :title, { include_blank: "選択してください" }, { class: "select select-bordered", id: "item_category_id" } %>
          <div class="append__category mt-2 lg:mt-4"></div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</main>
