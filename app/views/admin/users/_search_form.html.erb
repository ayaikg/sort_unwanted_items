<%= search_form_for @q, url: admin_root_path, data: { turbo_frame: "users_list" } do |f| %>
  <div class="space-y-2 md:space-y-0 md:flex md:justify-center md:space-x-4">
    <div class='form-control'>
      <%= f.search_field :name_cont, class: "input input-bordered", placeholder: t('defaults.search_word') %>
    </div>
    <div class='form-control'>
      <%= f.select :role_eq, User.roles_i18n.invert.map{|key, value| [key, User.roles[value]]}, { include_blank: t('defaults.unspecified') }, class: "select select-bordered" %>
    </div>
    <div class="flex justify-center">
      <%= f.submit class: 'btn btn-info px-10' %>
    </div>
  </div>
<% end %>