<% content_for(:title, t('.title')) %>
<div class="p-5 space-y-5 md:p-10">
  <h1 class="font-bold text-center text-2xl"><%= t('.title') %></h1> 
  <div class="flex space-x-2 justify-end">
    <%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-success' %>
    <%= button_to t('defaults.delete'), admin_user_path(@user), method: :delete, data: { turbo_confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-error' %>
  </div>
  <table class="table">
    <tr>
      <th><%= User.human_attribute_name(:id) %></th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:role) %></th>
      <td><%= @user.role_i18n %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:avatar) %></th>
      <td><%= image_tag @user.avatar.url, class: "rounded-full border border-2" %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:introduction) %></th>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:created_at) %></th>
      <td><%= l @user.created_at, format: :long %></td>
    </tr>
  </table>
</div>