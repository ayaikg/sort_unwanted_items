<% content_for(:title, t('.title')) %>
<div class="p-5 space-y-8">
  <h1 class="font-bold text-center text-2xl"><%= t('.title') %></h1>
  <div>
    <%= render 'search_form' %>
  </div>
  <%= turbo_frame_tag "admin_users_list" do %>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th><%= User.human_attribute_name(:id) %></th>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:role) %></th>
            <th><%= User.human_attribute_name(:created_at) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div>
      <%= paginate @users %>
    </div>
  <% end %>
</div>