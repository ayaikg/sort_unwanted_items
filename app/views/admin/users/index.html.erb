<div class="p-5">
  <h1 class="font-bold text-center text-2xl mb-8"><%= t('.title') %></h1>
  <%= turbo_frame_tag "users_list" do %>
    <div class="mb-8">
      <%= render 'search_form' %>
    </div>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th><%= User.human_attribute_name(:id) %></th>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:role) %></th>
            <th><%= User.human_attribute_name(:created_at) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div>
      <%= paginate @users %>
    </div>
  <% end %>
</div>