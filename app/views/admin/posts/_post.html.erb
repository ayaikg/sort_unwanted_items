<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.user.name %>
  </td>
  <td>
    <%= post.item.name %>
  </td>
  <td>
    <%= l post.created_at, format: :long %>
  </td>
  <td class="flex flex-wrap space-y-2 md:space-y-0 md:space-x-2">
    <%= link_to t('defaults.show'), admin_post_path(post), class: 'btn btn-info' %>
    <%= link_to t('defaults.edit'), edit_admin_post_path(post), class: 'btn btn-success' %>
    <%= button_to t('defaults.delete'), admin_post_path(post), method: :delete, data: { turbo_confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-error whitespace-nowrap' %>
  </td>
</tr>