<%= search_form_for @q, url: admin_items_path, data: { turbo_frame: "items_list", controller: "search", action: "input->search#submit" } do |f| %>
  <div class="space-y-2 md:space-y-0 md:flex md:justify-center md:space-x-4">
    <div class='form-control'>
      <%= f.search_field :name_cont, class: "input input-bordered", placeholder: t('defaults.search_word') %>
    </div>
    <div class='form-control'>
      <%= f.select :category_id_eq, grouped_options_for_select(categories_collection), { include_blank: 'カテゴリーで検索' }, class: "select select-bordered" %>
    </div>
  </div>
<% end %>