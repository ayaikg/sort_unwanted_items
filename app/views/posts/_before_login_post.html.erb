<div class="card w-[320px] bg-base-100 shadow-xl m-2 ranks">
  <div class="border-b flex items-center p-2">
    <div class="avatar mr-2">
      <div class="w-12 rounded-full border border-2">
        <%= image_tag before_login_post.user.avatar.url %>
      </div>
    </div>
    <div>
      <p class="font-bold"><%= before_login_post.user.name %></p>
    </div> 
  </div>
  <div class="card-body">
    <h2 class="card-title"><%= truncate(before_login_post.item.name, length: 15) %></h2>
    <p><%= truncate(before_login_post.content, length: 50) %></p>
  </div>
  <div class="flex justify-center">
    <% if before_login_post.item.image.present? %>
      <div><%= image_tag before_login_post.item.image.url %></div>
    <% end %>
    <% if before_login_post.post_image.present? %>
      <div><%= image_tag before_login_post.post_image.url %></div>
    <% end %>
  </div>
  
  <div class="flex items-center justify-around h-[50px]">
    <p class="text-sm text-neutral-400">更新日: <%= before_login_post.updated_at.strftime("%Y-%m-%d") %></p>
  </div>
</div>