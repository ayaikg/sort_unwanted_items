<% content_for(:title, t('.title')) %>
<main class="pb-10 px-10">
  <%= render 'search_form', url: likes_posts_path %>
  <div class="flex flex-wrap items-center justify-center">
    <% if @like_posts.present? %>
      <%= render @like_posts %>
    <% else %>
      <p>お気に入りしている投稿はありません</p>
    <% end %>
  </div>
  <%= paginate @like_posts %>
</main>